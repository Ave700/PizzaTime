<h1>Pizza Time</h1>
<p>This is the catalog of all possible items, as an Employee you can change everything here.</p>
<div class="content" id="main">
  <div class="catalog">
    {{#with wrapper}}
        {{#with objects.[0]}}
            <div class="topContainer">
              <center><table id="firstT"></center>
              <tr>
                  <th>Topping</th>
                  <th>Price</th>
              </tr>
              {{#each topping}}
                  <tr>
                      <td><input type="text" name="Topname" placeholder="{{name}}"></input></td>
                      <td><input type="text" name="Price" placeholder="{{price}}"></input></td>

			<td><button class = "UpdateTopping">Update</button></td>
			<td><button class = "DeleteTopping">Delete</button></td>

                  </tr>
            {{/each}}
		 <tr>
                    <td><input type="text" name="Topname" placeholder="Insert Topping Name"></input></td>
                    <td><input type="text" name="Price" placeholder="Insert Price"></input></td>
			<td><button id = "UpdateFirst">Update</button></td>
                </tr>
            </table>
          </div>
        {{/with}}
        {{#with objects.[1]}}
            <div class="topContainer">
              <center><table></center>
              <tr>
                  <th>Restaurant Name</th>
                  <th>Address</th>
                  <th>Zip Code</th>
                  <th>Phone Number</th>
              </tr>
              {{#each restaurant}}
                  <tr>
                      <td><input type="text" name="RName" placeholder="{{rest_name}}"></input></td>
                      <td><input type="text" name="Address" placeholder="{{Address}}"></input></td>
                      <td><input type="text" name="Zipcode" placeholder="{{Zipcode}}"></input></td>
                      <td><input type="text" name="PhoneNumber" placeholder="{{PhoneNumber}}"></input></td>
			                <td><button class = "UpdateTopping">Update</button></td>
                      <td><button class = "DeleteTopping">Delete</button></td>
                  </tr>
            {{/each}}
		<tr>
                    <td><input type="text" name="RName" placeholder="Insert Topping Name"></input></td>
                    <td><input type="text" name="Address" placeholder="Insert Address"></input></td>
                    <td><input type="text" name="Address" placeholder="Insert Zipcode"></input></td>
                    <td><input type="text" name="Address" placeholder="Insert Phone #"></input></td>
                	<td><button id = "UpdateSecond">Update</button></td>
		</tr>
            </table>
          </div>
        {{/with}}
        {{#with objects.[2]}}
            <div class="topContainer">
              <center><table></center>
              <tr>
                  <th>Link To Pizza</th>
                  <th>Name</th>
                  <th>Crust Type</th>
                  <th>Size</th>
              </tr>
              {{#each pizza}}
                  <tr>
                      <td><a href="/pizzas/{{pizzaID}}">{{name}}</a></td>
                      <td><input type="text" name="PizzaName" placeholder="{{name}}"></input></td>
                      <td><input type="text" name="CrustType" placeholder="{{CrustType}}"></input></td>
                      <td><input type="text" name="Size" placeholder="{{Size}}"></input></td>
                			<td><button class = "UpdateTopping">Update</button></td>
                      <td><button class = "DeleteTopping">Delete</button></td>
                  </tr>
            {{/each}}
		<tr>
                    <td></td>
                    <td><input type="text" name="pizzaName" placeholder="Insert Pizza Name"></input></td>
                    <td><input type="text" name="CrustType" placeholder="Insert CrustType"></input></td>
                    <td><input type="text" name="PizzaSize" placeholder="Insert Size"></input></td>
                	<td><button id = "UpdateThird">Update</button></td>
		</tr>
            </table>
          </div>
        {{/with}}
    {{/with}}
  </div>
</div>
<footer>Created for CS340 class</footer>
