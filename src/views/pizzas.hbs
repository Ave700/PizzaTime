<h1>Pizza Time</h1>

<div class="flex-container">
 <div class="content" id="main">
  <div class="pizzas-box">
    {{#with wrapper}}
        {{#with objects.[0]}}
        <h2>Pizzas</h2>
         {{#each pizzas}}
          <div class="pizza">
            <div class="pizza-name">{{name}}</div>
            <div class="pizza-crust">{{CrustType}}</div>
            <div class="pizza-size">{{Size}}</div>
          </div>
          {{/each}}
        {{/with}}
        {{#with objects.[1]}}
        <h3>Toppings</h3>
         {{#each toppings}}
          <div class="toppings">
            <div class="topping-name">{{name}}</div>
          </div>
          {{/each}}
        {{/with}}
    {{/with}}
  </div>
 </div>
</div>
